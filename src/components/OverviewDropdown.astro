---
const title = Astro.props.title;
// const beskrivelse = Astro.props.beskrivelse;
---

<div class="grid grid-cols-4 mb-xs md:mb-s mt-xs md:mt-s">
  <button type="button" class="infobox flex items-center gap-xxxs md:gap-m lg:gap-xl ml-xs mr-xxxs md:ml-xl md:mr-s lg:ml-xxl col-span-3">
    <img src="/img/openArrow.svg" class="testhall openArrow" alt="down arrow" />
    <!-- <img src="/img/closeArrow.svg" class="closeArrow hidden" alt="up arrow" />   -->
  <p class="text-4xl order-2 md:text-5xl stroke font-bold text-left">{title}</p>

  </button>
  <div class="content col-span-4 mb-xxs mt-xxs md:mb-s md:mt-s lg:ml-xxl">
    <slot class="" name="beskrivelse" />
  </div>

</div>

<style>
  .infobox {
    cursor: pointer;
  }

  .content {
    display: none;
  }
</style>
