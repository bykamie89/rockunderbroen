---
import '../styles/style.css';

const { btn_primary } = Astro.props;
---

<button
  class='btn_primary_small flex flex-col items-center text-primary_white bg-primary_blue md:text-xl no-underline'
  >{btn_primary}</button
>

<style>
  .btn_primary_small {
    padding: 15px 25px 15px 25px;
    border-radius: 19px;
  }

  .btn_primary_small:hover {
    box-shadow: 2px 5px 8px #011f74;
    font-size: 1.03rem;
  }

  @media (min-width: 768px) {
    .btn_primary_small:hover {
      font-size: 1.28rem;
    }
  }
</style>
