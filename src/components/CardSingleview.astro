---
import "../styles/style.css";
const { artist, tid, btn_primary } = Astro.props;
---

<article class="border-4 border-primary_blue rounded-xl">
  <h6 class="h6">{artist}</h6>
  <p class="font-bold text-beige_300">{tid}</p>
  <button class="btn_primary_small md:text-2xl lg:text-2xl lg:hover:text-3xl">{btn_primary}</button>
</article>

<style>
  .btn_primary_small {
    color: var(--primary_white);
    background-color: var(--primary_blue);
    padding: 18px 30px 18px 30px;
    border-radius: 19px;
    display: flex;
    flex-direction: column;
    align-self: center;

    box-shadow: 0px 5px 5px #022a99;
  }
</style>
